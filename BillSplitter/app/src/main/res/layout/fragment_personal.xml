<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bdumeljic.billsplitter.PersonalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/keyline_16dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_personal_overview"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            android:layout_marginBottom="@dimen/keyline_16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/keyline_16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:id="@+id/person_photo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/keyline_16dp"
                        android:paddingRight="@dimen/keyline_16dp"
                        android:layout_toRightOf="@+id/person_photo"
                        android:layout_toEndOf="@+id/person_photo"
                        android:layout_centerVertical="true"
                        android:textAppearance="@android:style/TextAppearance.Material.Title"
                        android:id="@+id/person_name"
                        android:text="name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="€ "
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/person_balance"
                        android:textAppearance="@android:style/TextAppearance.Material.Title" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/keyline_16dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:gravity="center_vertical|center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/keyline_16dp"
                            android:paddingRight="@dimen/keyline_16dp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                            android:id="@+id/person_bills" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="BILLS"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/keyline_16dp"
                            android:paddingRight="@dimen/keyline_16dp"
                            android:textColor="@color/secondary_text_default_material_light" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/keyline_16dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_vertical|center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="€ 50.90"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/keyline_16dp"
                            android:paddingRight="@dimen/keyline_16dp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="SPENT"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/keyline_16dp"
                            android:paddingRight="@dimen/keyline_16dp"
                            android:textColor="@color/secondary_text_default_material_light" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/keyline_16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical|center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="€ 8.47"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/keyline_16dp"
                            android:paddingRight="@dimen/keyline_16dp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="DEBT"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/keyline_16dp"
                            android:paddingRight="@dimen/keyline_16dp"
                            android:textColor="@color/secondary_text_default_material_light" />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_recent_bills"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="@string/title_personal_recent_bills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:padding="@dimen/text_margin" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list_recent_bills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</FrameLayout>
